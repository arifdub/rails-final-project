<div class="container">
<p id="notice"><%= notice %></p>
	<h2 class="text-center"><strong>Our Menu</strong></h2>
	<% @menus.each_slice(3) do |group| %> <!-- make a group of 3 rows to display -->
		<div class="row">
			<% group.each do |menu| %>
				<div class="col-md-4 ">
					<div class="well">
						<div class="menu-items">
							<%= image_tag menu.image_url, :height => '120', 
							:width => '120', class: "img-circle center-block" %>	
							<h3 class="text-center">  <%= menu.title %></h3>
							<p> <%= menu.description %></p>
							<p>Price: <%= number_to_currency(menu.price, :unit => "â‚¬") %></p>
						</div>	
							<hr>
							<%= link_to "Add to Cart",  "/cart/#{menu.id}", 
								class: "btn btn-info btn-block" %>
													
					</div>
				</div>
			<% end %>  <!-- end of group.each --> 
		</div>
	<% end %> <!-- end of each slice -->
</div>
 