<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<p id="notice"><%= notice %></p>
			
			<h1>Listing Menus</h1>
			
			<table class="table">
			  <thead>
			    <tr>
			      <th>Title</th>
			      <th>Description</th>
			      <th>Price</th>
			      <th>Image url</th>
			      <th>Category</th>
			      <th colspan="3"></th>
			    </tr>
			  </thead>
			
			  <tbody>
			    <% @menus.each do |menu| %>
			      <tr>
			        <td><%= menu.title %></td>
			        <td><%= menu.description %></td>
			        <td><%= menu.price %></td>
			        <td><%= image_tag menu.image_url, :height => '100', 
				    :width => '120' %></td>
			        <td><%= menu.category %></td>
			        <td><%= link_to 'Show', menu, class: "btn btn-sm btn-success" %></td>
			        <td><%= link_to 'Edit', edit_menu_path(menu),class: 
				        "btn btn-sm btn-warning" %></td>
			        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-sm btn-danger" %></td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>
			
			<br>
			
			<%= link_to 'New Menu', new_menu_path, class: "btn btn-primary" %>
		</div>
	</div>
</div>